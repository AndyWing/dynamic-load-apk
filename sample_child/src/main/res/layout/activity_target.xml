<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".TargetActivity">

    <ImageButton
        android:src="@mipmap/ic_launcher"
        android:id="@+id/normal_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="24sp"
        android:text="@string/hello_in_plugin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.dynamic.plugin.child.PluginView
        android:id="@+id/plugin_view"
        android:text="@string/plugin_custom_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.dynamic.plugin.child.PluginView
        android:id="@+id/plugin_view_host"
        android:text="@string/plugin_custom_view_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/normal_view_set"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/normal_view_invoke_parent"
        android:textSize="24sp"
        android:text="@string/invoke_it"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/normal_view_set2"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/normal_view_set3"
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
